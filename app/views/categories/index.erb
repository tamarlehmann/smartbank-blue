<h2><%= @heading %> </h2>
<% if @results %>
<table>
  <tr>
    <th>Date</th>
    <th>Transaction</th>
    <th>Amount</th>
  </tr>
  <% total = 0 %>
  <%@results.each do |result| %>
      <tr>
        <td><%= result.date %></td>
        <td><%= result.vendor %></td>
        <td><%= result.amount %></td>
        <% total += result.amount %>
      </tr>
  <% end %>
</table>
<p> Total: Â£ <%= total.round(2) %> </p>

<% else %>
  <p>You have no transactions to show for this category</p>
<% end %>
